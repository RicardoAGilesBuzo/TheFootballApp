<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_team_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00/00/0000"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:background="@color/blue"/>

        <ImageView
            android:id="@+id/iv_team_home_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_date"
            app:layout_constraintBottom_toBottomOf="@+id/iv_team_home_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_team_home_score"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/iv_team_home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_team_home_logo"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_team_status"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/iv_team_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="15sp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/iv_team_home_score"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_team_away_score"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/iv_team_away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_team_status"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_team_away_logo"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/iv_team_away_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_date"
            app:layout_constraintBottom_toBottomOf="@+id/iv_team_away_name"
            app:layout_constraintStart_toEndOf="@+id/iv_team_away_score"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/iv_team_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:textSize="17sp"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_home_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_team_home_logo"
            app:layout_constraintEnd_toEndOf="@+id/iv_team_home_logo"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/iv_team_away_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="away"
            android:textSize="17sp"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/iv_team_away_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_team_away_logo"
            app:layout_constraintEnd_toEndOf="@+id/iv_team_away_logo"
            android:layout_marginBottom="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>